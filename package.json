{
  "name": "base-template",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "better-auth": "^1.4.9",
      "@polar-sh/better-auth": "^1.1.3"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @base-template/db db:push",
    "db:studio": "turbo -F @base-template/db db:studio",
    "db:generate": "turbo -F @base-template/db db:generate",
    "db:migrate": "turbo -F @base-template/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@base-template/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "@base-template/config": "workspace:*"
  },
  "packageManager": "bun@1.3.5"
}
